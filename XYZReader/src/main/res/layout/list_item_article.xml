<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_space_between_cards"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/photo_placeholder"
            android:scaleType="fitCenter"
            tools:src="@drawable/dummy_thumb"/>

        <TextView
            android:id="@+id/item_article_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingEnd="@dimen/card_left_and_right_padding"
            android:paddingStart="@dimen/card_left_and_right_padding"
            android:paddingTop="@dimen/card_primary_title_top_padding"
            tools:text="Ebooks, Neither E, Nor Books"/>

        <TextView
            android:id="@+id/item_article_subtitle"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/card_supporting_text_bottom_padding"
            android:paddingEnd="@dimen/card_left_and_right_padding"
            android:paddingStart="@dimen/card_left_and_right_padding"
            android:paddingTop="@dimen/card_supporting_text_top_padding"
            tools:text="Nov 20, 2013 by Cory Doctorow"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
